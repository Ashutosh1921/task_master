{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6", // Use ES6 modules
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noEmitOnError": true, // Prevents emitting JavaScript if there are errors
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}